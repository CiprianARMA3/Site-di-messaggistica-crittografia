<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat</title>
  <link rel="stylesheet" href="/css/style-chat.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="icon" href="/images/logo-white.png">
</head>
<body class="night" data-user-id="<%= user.id %>"  data-friend-id="<%= friends && friends.length > 0 ? friends[0].id : '' %>">
  <div id="notification" class="notification"></div>

  <!-- Vertical Sidebar Menu -->
  <aside class="vertical-menu">
    <div class="menu-logo">
      <img src="/images/logo-white.png" alt="Logo">
    </div>
    <ul class="menu-items">
      <li><a href="/home"><i class="fa fa-house"></i><span>Home</span></a></li>
      <li><a href="/chat" class="active"><i class="fa fa-comments"></i><span>Chat</span></a></li>
      <li><a href="/about-us"><i class="fa fa-info-circle"></i><span>About Us</span></a></li>
      <li><a href="/settings"><i class="fa fa-gear"></i><span>Settings</span></a></li>
    </ul>
  </aside>

  <div class="container">
    <aside class="sidebar">
      <div class="sidebar-header">
        <img src="<%= userSettings.pfp %>" alt="User" class="profile-pic">
        <label id="username-label"><%= userSettings.username || user.username %></label>
        <div class="menu-icons"></div>
      </div>

      <!-- Search bar -->
      <div class="search">
        <i class="fa fa-search"></i>
        <input type="text" id="sidebar-search" placeholder="Search or start new chat">
      </div>

      <!-- Chat list -->
      <div class="chat-list">
        <% if (friends && friends.length > 0) { %>
          <% friends.forEach(f => { %>
            <div class="chat">
              <img src="<%= f.pfp %>" alt="Contact" id="user-img">
              <div class="chat-info">
                <h4 class="name-user"><%= f.username %></h4>
                <p class="last-message"><%= f.lastMessage || "ultimo messaggio placeholder" %></p>
              </div>
              <span class="time"><%= f.lastActive || "" %></span>
            </div>
          <% }) %>
        <% } else { %>
          <p class="empty">No friends yet.</p>
        <% } %>

        <!-- Add Friend & Join Group buttons -->
        <div class="chat-buttons">
          <button id="add-friend-btn"><i class="fa fa-user-plus"></i> Add Friend</button>
          <button id="join-group-btn"><i class="fa fa-users"></i> Join Group</button>
          <button id="requests"><i class="fa-solid fa-inbox"></i>Requests <span id="incoming-requests">0</span></button>
        </div>
      </div>
    </aside>

    <!-- Main Chat Window -->
    <main class="chat-window">
      
      <!-- Chat header -->
      <div class="chat-header">
        <img src="/images/blank.png" alt=" ">
        <div class="chat-contact">
          <h4 class="chat-contact">Choose a Contact</h4>
          <p class="status offline">offline</p>
        </div>
        <div class="chat-actions">
          <i class="fa fa-search" id="chat-search-toggle"></i>
          <i class="fa fa-phone"></i>
          <i class="fa fa-video"></i>
          <i class="fa fa-ellipsis-v"></i>
        </div>
      </div>

      <!-- Hidden chat search -->
      <div class="chat-search" id="chat-search">
        <i class="fa fa-search"></i>
        <input type="text" placeholder="Search messages..." id="chat-search-input">
      </div>
            <!-- <div class="search2" id="chat-search">
        <i class="fa fa-search"></i>
        <input type="text" id="chat-search" placeholder="Search or start new chat">
      </div>  -->

      <div class="messages">
        <!-- CHAT VIEW -->
        <div id="chat-view" class="chat-view">
          <!-- <div class="message incoming">
            <p> <span class="time"></span></p>
          </div>
          <div class="message outgoing">
            <p> <span class="time"> <i class="fa fa-check-double read"></i></span></p>
          </div> -->
        </div>

        <!-- SETTINGS VIEW -->
        <div id="settings-view" class="settings-view" aria-hidden="true">
          <div class="settings-header">
            <button class="back-to-chat" aria-label="Back"><i class="fa fa-arrow-left" style="color: white;"></i></button>
            <h3>Chat Settings</h3>
          </div>

          <div class="settings-body">
            <label>
              <input type="checkbox" id="show-notification"> Notifications
            </label>
            <label>
              <input type="checkbox" id="auto-clear" checked> Auto-Clear Chat after 15 days
            </label>

            <button class="clear-chat"><i class="fas fa-desktop"></i> Clear Chat</button>
            <button class="clear-chat"><i class="fas fa-server"></i> Clear Server-Side Chat</button>
            <p class="mini-text">Remember! Clearing the server-side chat is permitted only after the 2 participants agree.</p>
            <button class="clear-chat-delete-friend">Clear Chat and Delete Friend</button>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div class="chat-footer">
        <i class="fa fa-paperclip"></i>
        <input type="text" placeholder="Type a message">
        <i class="fa fa-microphone"></i>
        <button class="send-btn"><i class="fa fa-paper-plane"></i></button>
      </div>
    </main>
  </div>

  <!-- Modal -->
  <div class="modal" id="modal">
    <div class="modal-content">
      <span class="close-btn">&times;</span>
      <h3 id="modal-title">Add Friend</h3>
      <input type="hidden" id="csrfToken" value="<%= csrfToken %>">
      <input type="text" id="modal-input" placeholder="Enter name...">
      <button id="modal-submit">Submit</button>
    </div>
  </div>

  <!-- Requests Modal -->
  <div class="modal" id="requests-modal">
    <div class="modal-content">
      <span class="close-btn">&times;</span>
      <h3 id="requests-title">Requests</h3>
      <div class="requests-list">
        <% if (requests && requests.length > 0) { %>
          <% requests.forEach(req => { %>
            <div class="request">
              <span><%= req.fromUsername %></span>
              <div class="request-actions">
                <button class="accept-btn" data-id="<%= req.fromId %>">Accept</button>
                <button class="decline-btn" data-id="<%= req.fromId %>">Decline</button>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="empty">No requests.</p>
        <% } %>
      </div>
    </div>
  </div>

  <script src="/js/code-chat.js"></script>
</body>
</html>
