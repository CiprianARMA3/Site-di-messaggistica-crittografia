<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat</title>
  <link rel="stylesheet" href="/css/style-chat.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
          <link rel="icon" href="/images/logo-white.png">
</head>
<body class="night">
  <div class="container">
    <aside class="sidebar">
      <div class="sidebar-header">
        <img src="" alt="User" class="profile-pic"> <label id="username-label"><%=user.username%></label>
        <div class="menu-icons">
          <i class="fa fa-circle-notch"></i>
          <i class="fa fa-comment-alt"></i>
          <i class="fa fa-ellipsis-v"></i>
        </div>
      </div>

      <!-- Search bar -->
      <div class="search">
        <i class="fa fa-search"></i>
        <input type="text" id="sidebar-search" placeholder="Search or start new chat">
      </div>

      <!-- Chat list -->
      <div class="chat-list">
        <div class="chat">
          <img src="" alt="Contact">
          <div class="chat-info">
            <h4>Rossi</h4>
            <p>ultimo messaggio placeholder</p>
          </div>
          <span class="time">10:45</span>
        </div>
        <!-- Add Friend & Join Group buttons -->
        <div class="chat-buttons">
          <button id="add-friend-btn"><i class="fa fa-user-plus"></i> Add Friend</button>
          <button id="join-group-btn"><i class="fa fa-users"></i> Join Group</button>
        </div>
      </div>
    </aside>

    <!-- Main Chat Window -->
    <main class="chat-window">
      <!-- Chat header -->
      <div class="chat-header">
        <img src="" alt="Contact">
        <div class="chat-contact">
          <h4 class="chat-contact">person</h4>
          <p class="status online">online</p>
        </div>
        <div class="chat-actions">
          <i class="fa fa-search" id="chat-search-toggle"></i>
          <i class="fa fa-phone"></i>
          <i class="fa fa-video"></i>
          <i class="fa fa-ellipsis-v"></i>
        </div>
      </div>

      <!-- Hidden chat search -->
      <div class="chat-search" id="chat-search">
        <input type="text" placeholder="Search messages..." id="chat-search-input">
      </div>

      <!-- Messages -->
      <div class="messages">
        <div class="message incoming">
          <p>test <span class="time">99:99</span></p>
        </div>
        <div class="message outgoing">
          <p>hello world <span class="time">99:99 <i class="fa fa-check-double read"></i></span></p>
        </div>
      </div>

      <!-- Footer -->
      <div class="chat-footer">
        <i class="fa fa-smile"></i>
        <i class="fa fa-paperclip"></i>
        <input type="text" placeholder="Type a message">
        <i class="fa fa-microphone"></i>
        <button class="send-btn"><i class="fa fa-paper-plane"></i></button>
      </div>
    </main>
  </div>

  <!-- Modal -->
  <div class="modal" id="modal">
    <div class="modal-content">
      <span class="close-btn">&times;</span>
      <h3 id="modal-title">Add Friend</h3>
      <input type="text" id="modal-input" placeholder="Enter name...">
      <button id="modal-submit">Submit</button>
    </div>
  </div>

  <script src="/js/code-chat.js"></script>
</body>
</html>
