<!DOCTYPE html>
<html>
    <head>
        <title>
            Login
        </title>
        <link rel="icon" href="../login-page/images/logo-white.png">

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/css/style-login.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap" rel="stylesheet">
                <link rel="icon" href="/images/logo-white.png">
    
    </head>
    <body>
        <!-- <div class="corner-light"></div> -->
        <script src="/js/code_loginpage.js" defer></script>

        <section class="layout">

            <div class="header">
                <img src="/images/logo-white.png" alt="Logo" class="logo">
                <nav>
                    <ul class="menu">
                        <li><a href="/home" id="selected-menu">Home</a></li>
                                                <li><a href="/chat">Chat</a></li>
                        <li><a href="/about-us">About Us</a></li>
                        <li><a href="/contact">Contacts</a></li>
                        <li><a href="/settings">Settings</a></li>
                    </ul>
                </nav>
            </div>

            <div class="main">
                <div id="accedere">
                                                                                <% if (typeof error !== 'undefined') { %>
                        <div class="error-box"><%= error %></div>
                        <% } %>   
                    <form action="/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">   
                 
                        <p></p>
                        <p class="shiny-ahh-text">E-Mail</p>
                        <input type="text" id="username-box" name="email" required>
                        <p class="shiny-ahh-text">Password</p>
                        <input type="password" id="password-box" name="password" required>
                        <label id="toggle-password" class="toggle-password">Show Password</label>
                        <button id="accedere-box" type="submit">Login</button>
                        <a href="/signup" class="shiny-ahh-text"> Register</a>
                        <a href="/forgot-password"class="shiny-ahh-text">Forgot Password</a>
                    </form>
 
                    <div class="logo-container">
                    </div>
                </div>
            </div>
            

            <div class="footer">
                <p id="version-getter"></p>
                
                <div id="container-logo">
                    <a href="#"><img src="/images/instagram-logo.png" alt="logo" class="footer-logos"></a>
                    <a href="https://discord.gg/hvpJrx2tK7"><img src="/images/discord-logo.webp" alt="logo" class="footer-logos"></a>
                    <a href="#"><img src="/images/telegram-white.webp" alt="logo" class="footer-logos"></a>
                </div>
            </div>
        </section>
                              <div class="logo-container" id="main-logo-container">
                    <img src="/images/euoutline.png" alt="Logo" class="logo-immagine">
                    </div> 
            <script src="/js/resize-logo.js" defer></script>
    </body>
</html>